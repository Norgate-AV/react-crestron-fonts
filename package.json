{
    "name": "@norgate-av/react-crestron-fonts",
    "version": "0.0.0-development",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/react-crestron-fonts.esm.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "clean": "rimraf dist",
        "start": "tsdx watch",
        "build": "yarn clean && tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "lint:fix": "tsdx lint --fix",
        "prepare": "husky install",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "size-limit": [
        {
            "path": "dist/react-crestron-fonts.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/react-crestron-fonts.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@size-limit/preset-small-lib": "^7.0.8",
        "@storybook/addon-docs": "^6.4.20",
        "@storybook/addon-essentials": "^6.4.20",
        "@storybook/addon-info": "^5.3.21",
        "@storybook/addon-links": "^6.4.20",
        "@storybook/addons": "^6.5.14",
        "@storybook/react": "^6.4.20",
        "@storybook/testing-react": "^1.2.4",
        "@types/react": "^17.0.43",
        "@types/react-dom": "^17.0.14",
        "babel-loader": "^8.2.4",
        "husky": "^7.0.4",
        "postcss": "^8.4.12",
        "postcss-import": "^14.1.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-is": "^18.0.0",
        "rimraf": "^3.0.2",
        "rollup-plugin-postcss": "^4.0.2",
        "size-limit": "^7.0.8",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "ay-crestron-fonts": "^2.0.0"
    }
}
